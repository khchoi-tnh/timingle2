# timingle Environment Variables Template
# Copy this file to .env and update with your values

#########################################
# Server Configuration
#########################################
PORT=8080
ENV=development  # development, staging, production
LOG_LEVEL=debug  # debug, info, warn, error

#########################################
# Database - PostgreSQL
#########################################
DB_HOST=localhost
DB_PORT=5432
DB_USER=timingle
DB_PASSWORD=timingle_dev_password
DB_NAME=timingle
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5

#########################################
# Database - ScyllaDB (Optional)
#########################################
SCYLLA_HOSTS=localhost
SCYLLA_PORT=9042
SCYLLA_KEYSPACE=timingle
SCYLLA_CONSISTENCY=QUORUM

#########################################
# Redis
#########################################
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3

#########################################
# NATS / JetStream
#########################################
NATS_URL=nats://localhost:4222
NATS_CLUSTER_ID=timingle-cluster
NATS_CLIENT_ID=timingle-api

#########################################
# JWT Authentication
#########################################
JWT_SECRET=your-super-secret-key-change-in-production-minimum-32-characters
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
JWT_ALGORITHM=RS256

#########################################
# OAuth - Google
#########################################
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URL=http://localhost:8080/auth/google/callback

#########################################
# OAuth - Kakao (Optional)
#########################################
KAKAO_CLIENT_ID=
KAKAO_CLIENT_SECRET=
KAKAO_REDIRECT_URL=http://localhost:8080/auth/kakao/callback

#########################################
# SMS/Phone Authentication
#########################################
SMS_PROVIDER=twilio  # twilio, aligo, solapi
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

#########################################
# Payment - Toss
#########################################
TOSS_CLIENT_KEY=
TOSS_SECRET_KEY=
TOSS_WEBHOOK_SECRET=

#########################################
# Payment - Stripe (Optional)
#########################################
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

#########################################
# File Storage
#########################################
STORAGE_PROVIDER=local  # local, s3, gcs
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-northeast-2
S3_BUCKET_NAME=timingle-uploads

#########################################
# Email (Optional)
#########################################
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=noreply@timingle.com

#########################################
# Frontend Configuration
#########################################
API_BASE_URL=http://localhost:8080/api/v1
WS_BASE_URL=ws://localhost:8080/ws

#########################################
# Monitoring & Logging (Optional)
#########################################
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

#########################################
# Rate Limiting
#########################################
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW=1m

#########################################
# CORS
#########################################
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

#########################################
# Feature Flags
#########################################
FEATURE_OPEN_TIMINGLE_ENABLED=false
FEATURE_PAYMENT_ENABLED=false
FEATURE_ANALYTICS_ENABLED=false
